<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/index.css" />
    <title>My Bookings</title>
  </head>
  <body>
    <div class="navbar">
      <div class="navbarleft">
        <a href="/">Home</a>
        <a href="/myBookings">My Bookings</a>
        <a href="/previousBookings">Previous Bookings</a>
      </div>
      <div class="navbarright">
        <div class="dropdown">
          <button class="dropbtn"><i class="fa-solid fa-user"></i></button>
          <div class="dropdown-content">
            <a href="/account">Account</a>
            <a href="/logout">Logout</a>
          </div>
        </div>
      </div>
    </div>

    <h1>My Bookings</h1>

    <h2>Upcoming Bookings</h2>
    <% if (upcomingBookings.length > 0) { %> <%
    upcomingBookings.forEach(function(booking) { %>
    <div class="booking">
      <h3>
        Provider: <%= booking.providerId ? booking.providerId.name : "Provider
        not available" %>
      </h3>
      <p>
        Event Start Date: <%= booking.eventDate.toDateString() %> at <%=
        booking.eventDate.toLocaleTimeString() %>
      </p>
      <p>
        Event End Date: <%= booking.endDate.toDateString() %> at <%=
        booking.endDate.toLocaleTimeString() %>
      </p>
      <p>Status: <%= booking.status %></p>
    </div>
    <% }); %> <% } else { %>
    <p>No upcoming bookings.</p>
    <% } %>

    <h2>Previous Bookings</h2>
    <% if (previousBookings.length > 0) { %> <%
    previousBookings.forEach(function(booking) { %>
    <div class="booking">
      <h3>
        Provider: <%= booking.providerId ? booking.providerId.name : "Provider
        not available" %>
      </h3>
      <p>
        Event Start Date: <%= booking.eventDate.toDateString() %> at <%=
        booking.eventDate.toLocaleTimeString() %>
      </p>
      <p>
        Event End Date: <%= booking.endDate.toDateString() %> at <%=
        booking.endDate.toLocaleTimeString() %>
      </p>
      <p>Status: <%= booking.status %></p>
    </div>
    <% }); %> <% } else { %>
    <p>No previous bookings.</p>
    <% } %>
  </body>
</html>
