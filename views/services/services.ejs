<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= serviceType %>s</title>
    <link rel="stylesheet" href="/stylesheets/index.css" />
    <style>
      .service-card {
        border: 1px solid #ccc;
        border-radius: 8px;
        margin-bottom: 20px;
        padding: 15px;
        width: 250px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
      }
      .service-card img {
        height: auto;
        width: 100%;
        border-radius: 8px;
        margin-bottom: 10px;
      }
      .service-card h2 {
        font-size: 1.5rem;
        margin-bottom: 10px;
        margin-top: 1%;
      }
      .service-card p {
        margin-bottom: 10px;
      }
      .service-card .btn-book {
        background-color: #007bff;
        color: #fff;
        padding: 8px 16px;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        display: inline-block;
        cursor: pointer;
      }
      #filterForm {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        background-color: #f9f9f9;
        padding: 15px;
        border: 1px solid #ddd;
        border-radius: 8px;
        margin-bottom: 20px;
        max-width: 600px;
      }
      #filterForm label {
        flex-basis: 100%;
        font-weight: bold;
      }
      #filterForm input,
      #filterForm select,
      #filterForm button {
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 1rem;
      }
      #filterForm input[type="text"],
      #filterForm input[type="date"],
      #filterForm input[type="time"],
      #filterForm select {
        flex: 1 1 180px;
      }
      #filterForm button {
        background-color: #007bff;
        color: #fff;
        border: none;
        cursor: pointer;
      }
      #filterForm button:hover {
        background-color: #0056b3;
      }

      .service-list {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
      }
    </style>
  </head>
  <body>
    <h1><%= serviceType %>s</h1>
    <form id="filterForm" method="GET" action="">
      <label for="firmname">Search by firm name:</label>
      <input
        type="text"
        id="firmname"
        name="firmname"
        placeholder="Firm Name"
        value="<%= firmname %>"
      />

      <label for="state">Enter state:</label>
      <input
        type="text"
        id="state"
        name="state"
        placeholder="State"
        value="<%= state %>"
      />

      <label for="startDate">Event Start Date:</label>
      <input
        type="date"
        id="startDate"
        name="startDate"
        value="<%= startDate %>"
      />

      <label for="startTime">Event Start Time:</label>
      <input
        type="time"
        id="startTime"
        name="startTime"
        value="<%= startTime %>"
      />

      <label for="endDate">Event End Date:</label>
      <input type="date" id="endDate" name="endDate" value="<%= endDate %>" />

      <label for="endTime">Event End Time:</label>
      <input type="time" id="endTime" name="endTime" value="<%= endTime %>" />

      <label for="sort">Sort by:</label>
      <select name="sort" id="sort">
        <option value="">Sort by</option>
        <option value="rating">Rating</option>
        <option value="budget">Budget</option>
      </select>

      <button type="submit">Apply Filters</button>
    </form>

    <div class="service-list">
      <% if (services.length > 0) { %> <% services.forEach(service => { %>
      <div
        class="service-card"
        data-url="/services/<%= serviceType.toLowerCase() %>/<%= service._id %>"
      >
        <% if (service.profilePhoto) { %>
        <img
          src="/<%= service.profilePhoto %>"
          alt="<%= serviceType %> profilePhoto"
        />
        <% } else { %>
        <p>No photo available</p>
        <% } %>
        <h2><%= service.firmname %></h2>
        <p><%= service.description %></p>
        <p>Budget: $<%= service.budget %></p>
        <p>Rating: <%= service.rating %></p>
        <a
          href="/services/<%= serviceType.toLowerCase() %>/<%= service._id %>"
          class="btn-book"
          >Book Now</a
        >
      </div>
      <% }) %> <% } else { %>
      <p>No services available.</p>
      <% } %>
      <a href="/">Back</a>
    </div>
  </body>
</html>
