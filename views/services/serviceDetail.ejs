<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= serviceType %> Details</title>
    <link rel="stylesheet" href="/stylesheets/index.css" />
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
      }

      .service-details {
        max-width: 800px;
        margin: 20px auto;
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      }

      h1 {
        font-size: 2em;
        margin-bottom: 10px;
        color: #333;
      }

      p {
        font-size: 1.1em;
        line-height: 1.6;
        color: #555;
      }

      .profile-photo {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        margin-bottom: 20px;
      }

      .photo-gallery {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        justify-content: center;
        margin: 20px 0;
      }

      .photo-gallery img {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        transition: transform 0.2s;
      }

      .photo-gallery img:hover {
        transform: scale(1.05);
      }

      .btn-book {
        background-color: #007bff;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        cursor: pointer;
        font-size: 1.1em;
        margin-top: 10px;
        transition: background-color 0.3s;
      }

      .btn-book:hover {
        background-color: #0056b3;
      }

      a {
        color: #007bff;
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }
      #bookingmodel {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: rgba(0, 0, 0, 0.5);
      }

      .model-content {
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        max-width: 400px;
        width: 100%;
        text-align: center;
      }
    </style>
  </head>
  <body>
    <div class="service-details">
      <h1><%= service.firmname %></h1>
      <% if (service.profilePhoto) { %>
      <img
        class="profile-photo"
        src="/<%= service.profilePhoto %>"
        alt="<%= serviceType %> profilePhoto"
      />
      <% } %> <% if (service.photos && service.photos.length > 0) { %>
      <h3>ALL PHOTOS</h3>
      <div class="photo-gallery">
        <% service.photos.forEach(photo => { %>
        <img src="/<%= photo %>" alt="Service Photo" />
        <% }) %>
      </div>
      <% } %>
      <p><%= service.description %></p>
      <p>Budget: <%= service.budget %></p>
      <% if (service.social) { %>
      <p><a href="<%= service.social %>">Instagram</a></p>
      <% } %>
      <p>Whatsapp number: <%= service.contact %></p>
      <button class="btn-book" onclick="openmodel('<%= service._id %>')">
        Book now
      </button>
    </div>

    <div id="bookingmodel" style="display: none">
      <div class="model-content">
        <h2>Select a Date and Time for Booking</h2>
        <label for="startDate">Start Date:</label>
        <input type="date" id="startDate" required />
        <label for="startTime">Start Time:</label>
        <input type="time" id="startTime" required />
        <label for="endDate">End Date:</label>
        <input type="date" id="endDate" required />
        <label for="endTime">End Time:</label>
        <input type="time" id="endTime" required />
        <input
          type="number"
          id="bookingBudget"
          placeholder="Enter your budget"
          required
        />
        <button id="confirmDate">Request Booking</button>
        <button onclick="closemodel()">Cancel</button>
      </div>
    </div>

    <script>
      function openmodel(serviceId) {
        document.getElementById("bookingmodel").style.display = "block";
        document.getElementById("confirmDate").onclick = function () {
          const startDate = document.getElementById("startDate").value;
          const startTime = document.getElementById("startTime").value;
          const endDate = document.getElementById("endDate").value;
          const endTime = document.getElementById("endTime").value;

          if (startDate && startTime && endDate && endTime) {
            const startDateTime = new Date(`${startDate}T${startTime}`);
            const endDateTime = new Date(`${endDate}T${endTime}`);

            if (startDateTime < endDateTime) {
              requestBooking(serviceId, startDateTime, endDateTime);
            } else {
              alert("End time must be after start time.");
            }
          } else {
            alert("Please fill in all fields.");
          }
        };
      }

      async function requestBooking(serviceId, startDateTime, endDateTime) {
        const budget = document.getElementById("bookingBudget").value;
        try {
          const response = await fetch(`/bookService/${serviceId}`, {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({ startDateTime, endDateTime, budget }),
          });
          const data = await response.json();
          if (data.success) {
            alert(data.message);
            closemodel();
            window.location.href = "/myBookings";
          } else {
            alert(data.message || "Booking request failed.");
          }
        } catch (error) {
          console.error("Error sending booking request:", error);
        }
      }
    </script>
  </body>
</html>
