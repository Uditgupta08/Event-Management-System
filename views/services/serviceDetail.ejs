<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= serviceType %> Details</title>
    <link rel="stylesheet" href="/stylesheets/index.css" />
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
      }

      .service-details {
        max-width: 800px;
        margin: 20px auto;
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      }

      h1 {
        font-size: 2em;
        margin-bottom: 10px;
        color: #333;
      }

      p {
        font-size: 1.1em;
        line-height: 1.6;
        color: #555;
      }

      .profile-photo {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        margin-bottom: 20px;
      }

      .photo-gallery {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        justify-content: center;
        margin: 20px 0;
      }

      .photo-gallery img {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        transition: transform 0.2s;
      }

      .photo-gallery img:hover {
        transform: scale(1.05);
      }

      .btn-book {
        background-color: #007bff;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        cursor: pointer;
        font-size: 1.1em;
        margin-top: 10px;
        transition: background-color 0.3s;
      }

      .btn-book:hover {
        background-color: #0056b3;
      }

      a {
        color: #007bff;
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <div class="service-details">
      <h1><%= service.firmname %></h1>
      <% if (service.profilePhoto) { %>
      <img
        class="profile-photo"
        src="/<%= service.profilePhoto %>"
        alt="<%= serviceType %> profilePhoto"
      />
      <% } %> <% if (service.photos && service.photos.length > 0) { %>
      <h3>ALL PHOTOS</h3>
      <div class="photo-gallery">
        <% service.photos.forEach(photo => { %>
        <img src="/<%= photo %>" alt="Service Photo" />
        <% }) %>
      </div>
      <% } %>
      <p><%= service.description %></p>
      <p>Budget: <%= service.budget %></p>
      <% if (service.social) { %>
      <p><a href="<%= service.social %>">Instagram</a></p>
      <% } %>
      <p>Whatsapp number: <%= service.contact %></p>
      <button class="btn-book" onclick="confirmBooking('<%= service._id %>')">
        Book now
      </button>
    </div>
    <div id="bookingModal" style="display: none">
      <div class="modal-content">
        <h2>Select a Date for Booking</h2>
        <input type="date" id="bookingDate" />
        <button id="confirmDate">Request Booking</button>
        <button onclick="closeModal()">Cancel</button>
      </div>
    </div>
    <script>
      function openModal(serviceId) {
        document.getElementById("bookingModal").style.display = "block";
        document.getElementById("confirmDate").onclick = function () {
          const selectedDate = document.getElementById("bookingDate").value;
          if (selectedDate) {
            requestBooking(serviceId, selectedDate);
          } else {
            alert("Please select a date.");
          }
        };
      }

      function closeModal() {
        document.getElementById("bookingModal").style.display = "none";
      }

      async function requestBooking(serviceId, date) {
        try {
          const response = await fetch(`/services/book/${serviceId}`, {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({ date }),
          });
          const data = await response.json();
          if (data.success) {
            alert("Booking request sent to provider.");
            closeModal();
          } else {
            alert(data.message || "Booking request failed.");
          }
        } catch (error) {
          console.error("Error sending booking request:", error);
        }
      }
      function confirmBooking(providerId) {
        if (confirm("Are you sure you want to book this service?")) {
          fetch(`/bookService/${providerId}`, {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
          })
            .then((response) => response.json())
            .then((data) => {
              if (data.success) {
                alert("Booking confirmed!");
                window.location.href = "/myBookings";
              } else {
                alert("Booking failed. Please try again.");
              }
            })
            .catch((error) => {
              console.error("Error:", error);
              alert("An error occurred. Please try again.");
            });
        }
      }
    </script>
  </body>
</html>
